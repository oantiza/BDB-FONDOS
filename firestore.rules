rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // 1) Fondos: solo lectura para usuarios autenticados
    match /funds_v2/{fundId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    match /funds_v3/{fundId} {
      allow read: if true; 
      allow write: if request.auth != null && request.auth.token.email == 'oantiza@gmail.com';
    }

    match /system_settings/{document=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.email == 'oantiza@gmail.com';
    }

    // 2) Histórico de precios: solo lectura (escritura admin)
    match /historico_vl_v2/{isin} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.email == 'oantiza@gmail.com';
    }

    // 3) Datos privados de usuario
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // 4) Informes / análisis: solo lectura
    match /reports/{reportId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    match /analysis_results/{docId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // 4.5) Trabajos Administrativos (Jobs)
    match /admin_jobs/{jobId} {
      allow read, write: if request.auth != null && request.auth.token.email == 'oantiza@gmail.com';
    }

    // 4.6) Synthetic Benchmarks
    match /synthetic_benchmarks/{benchmarkId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.email == 'oantiza@gmail.com';
    }

    // 5) Regla por defecto: bloqueo total
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
